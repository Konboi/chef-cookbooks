Listen <%= @port %>
NameVirtualHost *:<%= @port %>

<VirtualHost *:<%= @port %>>
  DocumentRoot "<%= @root_path %>"
  ServerName   <%= @host %>
  ErrorLog     "logs/<%= @host %>.error_log"
  CustomLog    "logs/<%= @host %>.access_log" combined
 
  <Directory "<%= @root_path %>">
      AllowOverride  All
      DirectoryIndex index.php index.html
  </Directory>
</VirtualHost>
